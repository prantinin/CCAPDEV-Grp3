<script src="https://cdn.tailwindcss.com"></script>
<script src="/js/editprofile.js"></script>

<body class="bg-gradient-to-br from-green-400 to-green-600 min-h-screen">
    <main class="p-4 md:p-6 max-w-4xl mx-auto">
        <form class="rounded-3xl shadow-lg p-8 mx-4" style="background: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 100%);" method="POST" action="/editprofile/{{user.idNum}}" enctype="multipart/form-data">
            <div class="mb-8">
                <button type="button" class="mb-6 flex items-center gap-2 text-gray-700 hover:text-gray-900 transition-colors" onclick="window.location.href='/viewprofile/{{user.idNum}}'">
                    <img src="/Assets/icons/back.svg" alt="Back" class="w-5 h-5">
                </button>
                <div class="flex justify-center mb-6">
                    <div class="relative">
                        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
                            <img id="profile-image" src="{{#if user.profPic}}{{user.profPic}}{{else}}/Assets/images/default-avatar.png{{/if}}" alt="Profile Picture" class="w-full h-full object-cover">
                        </div>  
                        <label for="profilePicture" class="absolute bottom-0 right-0 bg-green-600 hover:bg-green-700 text-white rounded-full p-2 cursor-pointer transition-colors shadow-lg">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                        </label>                 
                        <input type="file" id="profilePicture" name="profilePicture" accept="image/*" class="hidden">
                    </div>
                </div>                      
                <div id="file-info" class="text-center mb-4 hidden">
                    <p class="text-sm text-gray-600">Selected: <span id="file-name"></span></p>
                </div>           
                <h1 class="text-3xl font-bold text-gray-800 text-center mb-8">{{user.fName}} {{user.lName}}</h1>        
                <div class="mb-8">
                    <p class="text-lg font-semibold text-gray-700 mb-3">Description</p>
                    <div class="rounded-2xl p-4 border border-white/30" style="background: rgba(255, 255, 255, 0.4);">
                        <textarea name="description" class="w-full bg-transparent text-gray-700 placeholder-gray-500 resize-none outline-none" rows="4" placeholder="Enter your description here...">{{user.profDesc}}</textarea>
                    </div>
                </div>
                <div class="flex gap-4 justify-center">
                    <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-semibold">Save</button>
                    <a href="/viewprofile/{{user.idNum}}" class="px-6 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors font-semibold no-underline">Cancel</a>
                </div>
            </div>
        </form>
    </main>
    
</body>
