<link rel="stylesheet" href="/CSS/createreserve.css">
<script src="/JS/createreserve.js"></script>

<div class="grid grid-cols-4 gap-5 p-6">

  <!-- Instructions -->
  <div class="col-span-4 flex justify-between font-light">
    <h2 class="text-3xl font-bold">Choose a laboratory.</h2>
  </div>

  <!-- Slot / Seat Area -->
  <div class="col-span-3 bg-white rounded-xl overflow-hidden shadow-md">
    <iframe src="/reserveiframe" title="slot-area-contents" class="w-full h-full border"></iframe>
  </div>

  <!-- Reservation Form -->
  <form method="POST" action="/submit-reservation" class="col-span-1 bg-[#D9F1DD] rounded-xl p-6 text-lg space-y-4 shadow-inner">
    
    <!-- Chosen Slot -->
    <div class="flex items-center space-x-2">
      <p class="text-2xl">Chosen slot:</p>
      <input type="text" name="chosenSlot" id="chosenSlot" class="chosenSlot bg-white px-4 py-2 border rounded text-xl text-black w-[10vw]" value="Lab 1, seat A1" readonly>
    </div>

    <!-- Date Input -->
    <div>
      <label for="resDate" class="text-2xl">Choose a Date</label>
      <input type="date" id="resDate" name="resDate" class="resDate w-full p-2 rounded text-xl border mt-1" required>
    </div>

    <!-- Time Slot -->
    <div>
      <label for="timeSlot" class="text-2xl">Choose a Time Slot</label>
      <select name="timeSlot" class="timeSlot w-full p-2 rounded border text-xl mt-1" required disabled>
        <option value="">-- None --</option>
      </select>
    </div>

    <br/>
    <br/>
    <br/>
    <br/>

    <!-- Anonymous Checkbox -->
    <div class="flex items-center space-x-2">
      <input type="checkbox" name="anonymous" class="anonymous accent-green-500">
      <label for="anonymous" class="text-2xl">Reserve Anonymously?</label>
    </div>

    <!-- Submit Button -->
    <button type="submit" name="confirmRes" class="confirmRes w-full py-2 rounded text-2xl shadow-md text-white" disabled>
      Confirm
    </button>
  </form>

</div>
