<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Labubuddies</title>
  <script src="/JS/iframeRes.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="m-0 p-0 bg-white">

  <!-- Lab Select Dropdown -->
  <div class="flex items-center justify-center gap-2 p-4 bg-green-300">
    <label for="lab-select" class="hidden">Choose Lab</label>
    <select id="lab-select" name="lab-select" class="text-3xl bg-white rounded-xl px-4 py-1">
      {{#each labs}}
        <option value="{{this.value}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <!-- Pop-up Message -->
  <div id="popReserved" class="hidden bg-gray-100 text-sm text-red-500 p-1 font-sans">
    <p>This seat has been reserved. Please choose another.</p>
  </div>

  <!-- Main Slot Area -->
  <div class="grid grid-cols-[0.2fr_2fr_2fr_2fr_2fr] grid-rows-[300px_300px] gap-0 p-0">

    <!-- Door -->
    <div class="w-[250px]">
      <img src="/Assets/icons/labdoor.svg" class="w-full" alt="Door" />
    </div>

    <!-- Board -->
    <div>
      <img src="/Assets/icons/board.svg" class="w-[50px]" alt="Board" />
    </div>

    <!-- Lab Areas -->
    {{#each areas}}
    <div class="flex flex-col gap-8 p-10">

      <!-- Upper Row -->
      <div class="flex space-x-2">
        {{#each this.upper}}
          <button id="{{id}}" class="chairs bg-transparent border-none w-20 flex justify-center cursor-pointer">
            <img src="{{img}}" class="w-full p-4" alt="{{id}}" />
          </button>
        {{/each}}
      </div>

      <!-- Middle Row (Table + Mid Chair) -->
      <div class="flex items-center justify-center -mt-10 -mb-10 -ml-8">
        <div class="flex items-center justify-center w-full h-[5%]">
          <img src="{{this.table}}" class="w-[150px]" alt="Table {{@key}}" />
        </div>

        {{#if this.mid}}
          <button id="{{this.mid.id}}" class="chairs bg-transparent border-none w-20 flex justify-center cursor-pointer" {{#if this.mid.onclick}}onclick="{{this.mid.onclick}}"{{/if}}>
            <img src="{{this.mid.img}}" class="w-full p-4" alt="{{this.mid.id}}" />
          </button>
        {{/if}}
      </div>

      <!-- Lower Row -->
      <div class="flex space-x-2">
        {{#each this.lower}}
          <button id="{{id}}" class="chairs bg-transparent border-none w-20 flex justify-center cursor-pointer" {{#if onclick}}onclick="{{onclick}}"{{/if}}>
            <img src="{{img}}" class="w-full p-4" alt="{{id}}" />
          </button>
        {{/each}}
      </div>

    </div>
    {{/each}}

  </div>

</body>
</html>
